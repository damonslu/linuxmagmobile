    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Enter Test Message:"
    />
<EditText
	android:id="@+id/inputText"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
/>
<Button android:text="SendMessage" android:id="@+id/SendMessage" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
